<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Game</title>
  <link rel="stylesheet" href="/style/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
    crossorigin="anonymous"></script>

</head>

<body>
  
  <div class="container">
    <div class="flex justify-start items-center">
      <div>
        <div class="boder border-spacing-1 border-white">
          <h2 class="text-xl text-white font-semibold">Lever <%=level - 1%>
          </h2>
        </div>
        <div>
          <p class=" text-white">Player: <%=player%>
          </p>
        </div>
        <div class="mt-10">
          <a href="/play">
            <button class="glow-on-sm" type="submit">Restart</button>
          </a>
          <a href="/">
            <button class="glow-on-sm" type="submit">Set New Name</button>
          </a>
        </div>
      </div>
      <div class="mt-20 ml-20 text-[40px]">
        <span id="L">P</span>
        <span id="I">O</span>
        <span id="G">K</span>
        <span id="H">E</span>
        <span id="T">M</span>
        <span id="T">O</span>
        <span id="G">N</span>
      </div>
      <div class="ml-20 mt-6">
        <div class="clock">
          <div class="hours">
            <div class="first">
              <div class="number">0</div>
            </div>
            <div class="second">
              <div class="number">0</div>
            </div>
          </div>
          <div class="tick">:</div>
          <div class="minutes">
            <div class="first">
              <div class="number">0</div>
            </div>
            <div class="second">
              <div class="number">0</div>
            </div>
          </div>
          <div class="tick">:</div>
          <div class="seconds">
            <div class="first">
              <div class="number">0</div>
            </div>
            <div class="second infinite">
              <div class="number">0</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-3 mt-20">
      <% for (const pokemon of shuffleList) { %>
        <div class="w-[150px] h-[200px]  card">
          <div class=" card-item h-full rounded-sm w-full items-center flex justify-center" onclick="chooseCard(this)">
            <img class="card-poke  z-[-1]" src="<%= pokemon.image %>" data-id="<%= pokemon.id %>" />
          </div>
        </div>
        <% } %>
    </div>

  </div>

  <input type="hidden" name="level" value="<%= level %>">
  <div id="timer"></div>
  <script src="/index.js"></script>
</body>

</html>